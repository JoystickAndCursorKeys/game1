WORK=`pwd`
cd ../game1-distribution
DISTR=`pwd`
cd $WORK

rm $DISTR/game1-core.zip
zip $DISTR/game1-core.zip ./core/* 
(cd doc; zip $DISTR/game1-core.zip ./README.txt)

rm $DISTR/game1-examples.zip
zip $DISTR/game1-examples.zip ./core/*
zip $DISTR/game1-examples.zip `find ./examples`
(cd doc; zip $DISTR/game1-examples.zip ./README.txt)
